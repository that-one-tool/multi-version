{
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ES2020",
		"outDir": "./dist",
		"rootDir": "./src",
		"target": "ES2020",
		"types": ["node"],
		"skipLibCheck": true,
		"strict": true
	},
	"include": ["./src/**/*.ts", "./test/**/*.ts"],
	"exclude": ["node_modules", "dist/"]
}
