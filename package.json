{
	"name": "@that-one-tool/multi-version",
	"version": "0.1.10",
	"description": "The simple and powerful tool to handle versioning inside your multi-packages monorepo",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"bin": {
		"multi-version": "./dist/index.js"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"type": "module",
	"scripts": {
		"build": "rm -rf ./dist && tsc -p tsconfig.build.json",
		"check": "npm run build && npm run lint && npm run test",
		"format": "prettier . --write",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"test": "node --no-warnings --loader ts-node/esm --require ts-node/register --experimental-test-coverage --test ./test/**/*.spec.ts"
	},
	"keywords": [
		"version",
		"monorepo",
		"multipackage",
		"package",
		"versioning",
		"validation",
		"bump",
		"ci",
		"cd",
		"automation"
	],
	"author": "That one tool",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/that-one-tool/multi-version.git"
	},
	"license": "GPL-3.0-only",
	"dependencies": {
		"@conventional-changelog/git-client": "1.0.1",
		"@manypkg/get-packages": "2.2.2",
		"chalk": "5.4.1",
		"commander": "12.1.0",
		"conventional-changelog": "6.0.0",
		"conventional-changelog-angular": "8.0.0",
		"conventional-commits-filter": "5.0.0",
		"conventional-commits-parser": "6.0.0",
		"conventional-recommended-bump": "10.0.0",
		"git-repository": "0.1.4",
		"semver": "7.6.3"
	},
	"devDependencies": {
		"@eslint/js": "^9.17.0",
		"@types/node": "^22.10.2",
		"@types/sinon": "^17.0.3",
		"eslint": "^9.17.0",
		"prettier": "^3.4.2",
		"sinon": "^19.0.2",
		"ts-node": "^10.9.2",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.18.2"
	}
}
